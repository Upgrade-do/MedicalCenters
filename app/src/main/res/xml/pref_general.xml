<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="Following preferences are set as template" />
    <Preference
        android:title="Please disregard" />

    <PreferenceCategory android:title="@string/pref_category_title_reporting">
        <ListPreference
            android:defaultValue="@string/pref_default_accuracy"
            android:entries="@array/pref_accuracy_titles"
            android:entryValues="@array/pref_accuracy_values"
            android:key="@string/pref_key_accuracy"
            android:summary="@string/pref_summary_accuracy"
            android:title="@string/pref_tittle_accuracy" />
        <ListPreference
            android:defaultValue="@string/pref_default_frequency"
            android:entries="@array/pref_frequency_titles"
            android:entryValues="@array/pref_frequency_values"
            android:key="@string/pref_key_frequency"
            android:summary="@string/pref_summary_frequency"
            android:title="@string/pref_tittle_frequency" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_title_advanced">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_start_on_boot"
            android:summaryOff="@string/pref_summary_start_on_boot_off"
            android:summaryOn="@string/pref_summary_start_on_boot_on"
            android:title="@string/pref_tittle_start_on_boot" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_gps_only"
            android:summaryOff="@string/pref_summary_gps_only_off"
            android:summaryOn="@string/pref_summary_gps_only_on"
            android:title="@string/pref_tittle_gps_only" />
    </PreferenceCategory>

    <!--HOLDS BASIC INFO ABOUT THIS APP-->
    <PreferenceCategory android:title="@string/pref_category_title_about">
        <Preference
            android:key="@string/pref_key_account_id"
            android:title="@string/pref_tittle_account_id" />
        <Preference
            android:key="@string/pref_key_version_id"
            android:title="@string/pref_tittle_version_id" />
        <Preference
            android:key="@string/pref_key_build_id"
            android:title="@string/pref_tittle_build_id" />
    </PreferenceCategory>

</PreferenceScreen>